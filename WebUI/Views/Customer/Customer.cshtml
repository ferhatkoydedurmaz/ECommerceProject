@using Entities.Dto
@using Shared.Results
@model BaseDataResponse<IEnumerable<CustomerDto>>
<div>
    <form id="contact-form" action="/customer" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="FirstName">Ad</label>
            <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="Ad">
        </div>
        <div class="form-group">
            <label for="LastName">Soyad</label>
            <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Soyad">
        </div>
        <div class="form-group">
            <label for="Email">E-posta</label>
            <input type="text" class="form-control" name="Email" id="Email" placeholder="E-posta">
        </div>
        <div class="form-group">
            <label for="Phone">Telefon</label>
            <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Telefon">
        </div>
       

        <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    </form>
</div>
<div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">E-posta</th>
            <th scope="col">Telefon</th>
            <th scope="col">Oluşturulma Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Data?.Any() == true)
        {
            @foreach (var customer in Model?.Data)
            {
                <tr>
                    <th>@customer?.Id</th>
                    <td>@customer?.FirstName</td>
                    <td>@customer?.LastName</td>
                    <td>@customer?.Email</td>
                    <td>+@customer?.Phone</td>
                    <td>@customer?.CreatedAt.ToString("dd-MM-yyyy")</td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
